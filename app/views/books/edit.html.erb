<h1>Editing Book</h1>

<%= form_tag("/books/#{@book.id}/update") do %>
    <% @book.errors.full_messages.each do |message| %>
        <div class="error">
            <% message = "error: #{message}" %>
            <%= message %>
        </div>
    <% end %>
    <div>
        <p>Title</p>
        <p><input type="text" name="title" value=<%= @book.title %>></input></p>
    </div>
    <div>
        <p>Body</p>
        <p><textarea name="body"><%= @book.body %></textarea></p>
    </div>
    <div>
        <input type="submit" value="Update Book"></input>
    </div>
<% end %>
    
<div>
    <%= link_to("Shows","/books/#{@book.id}") %> | <%= link_to("Back","/books/index") %>
</div>
    
